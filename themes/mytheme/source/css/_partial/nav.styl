.breadcrumb {
    padding: 8px 15px;
    list-style: none;
    border-radius: 0px;
    text-align: center;
    margin-bottom: 20px;
    list-style: none;
    border-radius: 4px;
}

.breadcrumb>li {
    display: inline-block;
}

.breadcrumb>li+li:before {
    padding: 0 5px;
    color: color-footer;
    content: "&\00a0";
}

.breadcrumbhr{
    margin-top: -15px;
    margin-bottom: 15px;
}